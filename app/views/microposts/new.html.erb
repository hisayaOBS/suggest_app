<h2><%= "テーマ:「#{@post.title}」への提案" %></h2>
<%= form_with(model: @micropost, local: true, url: post_microposts_path(@micropost.post_id), method: :post ) do |f| %>
<%= render "shared/error_messages", object: f.object %>
<div class="field">
  <%= f.label :title, "・タイトル" %>
  <%= f.text_field :title %>
</div>
<p class="field">
  <%# <%= f.label :content %>
  <%= f.rich_text_area :content, class: "content-area" %>
</p>

<%= f.submit "投稿", class: "btn btn-lg btn-primary btn-block"%>
<% end %>
