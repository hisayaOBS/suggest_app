    <h1>Posts#edit</h1>
    <p>Find me in app/views/posts/edit.html.erb</p>
    <div id='form-main'>
      <div id='form-div'>

        <%= form_with(model: @post, local: true) do |f| %>
        <%= render "shared/error_messages", object: f.object %>

        <% if @post.section.include? "ビ" %>
        <%= label_tag :business, "ビ" %>
        <%= check_box_tag :business, value = "ビ", checked: :true  %>
        <% else %>
        <%= label_tag :business, "ビ" %>
        <%= check_box_tag :business, value = "ビ" %>
        <% end %>

        <% if @post.section.include? "情" %>
        <%= label_tag :it, "情" %>
        <%= check_box_tag :it, value = "情", checked: :true  %>
        <% else %>
        <%= label_tag :it, "情" %>
        <%= check_box_tag :it, value = "情" %>
        <% end %>

        <% if @post.section.include? "医" %>
        <%= label_tag :medical, "医"%>
        <%= check_box_tag :medical, value = "医", checked: :true  %>
        <% else %>
        <%= label_tag :medical, "医"%>
        <%= check_box_tag :medical, value = "医" %>
        <% end %>

        <% if @post.section.include? "公" %>
        <%= label_tag :government, "公" %>
        <%= check_box_tag :government, value = "公", checked: :true  %>
        <% else %>
        <%= label_tag :government, "公" %>
        <%= check_box_tag :government, value = "公" %>
        <% end %>

        <% if @post.section.include? 'イ' %>
        <%= label_tag :event, "イ" %>
        <%= check_box_tag :event, value = "イ", checked: :true  %>
        <% else %>
        <%= label_tag :event, "イ" %>
        <%= check_box_tag :event, value = "イ" %>
        <% end %>
        <br>
        <div class='field'>
          <%= f.label :title, "募集テーマ" %>
          <%= f.text_field :title,placeholder: "投稿内容を入力してください", class: "form-control" %><br>
        </div>
        <div class="field">
          <%= f.label :start_date, "受付開始日" %>
          <%= f.date_field :start_date, value: Time.now.strftime("%Y-%m-%d"), class: "form-control"  %><br>
        </div>
        <div class="field">
          <%= f.label :end_date, "投稿終了日" %>
          <%= f.date_field :end_date, class: "form-control"  %><br>
        </div>
        <p class="field">
          <%= f.label :end_date, "投票限度数" %>
          <%= f.number_field :count_limit, value: 1, class: "form-control"  %>
        </p>
        <div class="actions submit">
          <%= f.submit "投稿", id: "button-blue" %> <div class='ease'></div>
        </div>
        <% end %>
      </div>
    </div>
    </div>
